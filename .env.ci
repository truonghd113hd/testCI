# CI Environment Variables for GitHub Actions
NODE_ENV=test

# Database Configuration for CI
DB_HOST=postgres_test
DB_PORT=5432
DB_NAME=test_db
DB_USER=test_user
DB_PASSWORD=test_pass
DB_SYNCHRONIZE=true
DB_LOGGING=false

# Redis Configuration for CI
REDIS_HOST=redis_test
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=ci_test_jwt_secret_key_2024
JWT_EXPIRES_IN=1h

# Application Configuration
APP_PORT=3000
APP_HOST=0.0.0.0

# Email Configuration (disabled for CI)
MAIL_ENABLED=false
MAIL_HOST=
MAIL_PORT=587
MAIL_USER=
MAIL_PASS=

# External APIs (mock for CI)
EXTERNAL_API_URL=http://mock-api.test
EXTERNAL_API_KEY=mock_key

# Logging
LOG_LEVEL=error

# File Upload (disabled for CI)
UPLOAD_MAX_SIZE=10485760
UPLOAD_DEST=./uploads

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=1000